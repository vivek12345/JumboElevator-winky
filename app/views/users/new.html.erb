<% provide(:title, 'JumboElevator | Register') %>
<div class="jumbotron jumbotron-sm">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-lg-12">
        <h1 class="h1">
          Register with us <small>Feel free to contact us</small>
          <small>(Jumbo Elevator)</small></h1>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <%=form_for(@user) do |f|%>
    <%= render 'shared/error_messages', object: f.object %>
    <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <div class="row">
      <div class="col-md-8">
        <div class="well well-sm">
          <form>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%=f.label :first_name%>
                  <%=f.text_field :first_name,class:'form-control'%>
                </div>
                <div class="form-group">
                  <%=f.label :last_name%>
                  <%=f.text_field :last_name,class:'form-control'%>
                </div>
                <div class="form-group">
                  <%=f.label :email%>
                  <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span>
                  </span>
                  <%=f.email_field :email,class:'form-control'%>
                </div>
              </div>
              <div class="form-group">
                <%=f.label :company_name%>
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-briefcase"></span>
                </span>
                <%=f.text_field :company_name,class:'form-control'%>
              </div>
            </div>
            <div class="form-group">
              <%=f.label :contact_number%>
              <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-earphone"></span>
              </span>
              <%=f.text_field :contact_number,class:'form-control'%>
            </div>
          </div>

                        <!--div class="form-group">
                            <label for="subject">
                                Subject</label>
                            <select id="subject" name="subject" class="form-control" required="required">
                                <option value="na" selected="">Choose One:</option>
                                <option value="service">General Customer Service</option>
                                <option value="suggestions">Suggestions</option>
                                <option value="product">Product Support</option>
                            </select>
                          </div-->
                        </div>
                        <div class="col-md-6">
                          <div class="form-group">
                            <%=f.label :address%>
                            <%= f.text_area :address,rows:'9',cols:'25',class:'form-control'%>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group">
                            <%=f.label :feedback%>
                            <%= f.text_area :feedback,rows:'4',cols:'25',class:'form-control'%>
                          </div>
                        </div>
                      </div>
                      <div class="row">

                        <div class="col-md-6">
                          <b>Products Interested In:</b><br>
                          <div class="form-group">

                            <%=f.check_box :Stack_Car_Parking_Systems,{},'Yes',false%> <%=f.label :Stack_Car_Parking_Systems%>   <br>

                            

                            <%=f.check_box :Home_Lift,{},'Yes',false%> <%=f.label :Home_Lift%>  <br>

                            

                            <%=f.check_box :Curved_Stair_Lift,{},'Yes',false%> <%=f.label :Curved_Stair_Lift%>  <br>

                            

                            <%=f.check_box :Escalator_and_Walkways,{},'Yes',false%> <%=f.label :Escalator_and_Walkways%>  <br>

                            

                            <%=f.check_box :Platform_Lift,{},'Yes',false%> <%=f.label :Platform_Lift%><br>

                          </div>
                        </div>
                        <div class="col-md-6">
                        <div class="form-group">

                              

                            <%=f.check_box :Multi_Level_Car_Parking_Systems,{},'Yes',false%> <%=f.label :Multi_Level_Car_Parking_Systems%><br>

                              

                            <%=f.check_box :Straight_Stair_Lift,{},'Yes',false%> <%=f.label :Straight_Stair_Lift%><br>

                            

                            <%=f.check_box :Pasenger_Elevator,{},'Yes',false%> <%=f.label :Pasenger_Elevator%><br>

                            

                            <%=f.check_box :Wheelchair_Access_Lift,{},'Yes',false%> <%=f.label :Wheelchair_Access_Lift%><br>

                            

                          </div>

                        </div>
                      </div>
                      <div class="row">

                        <div class="col-md-12">
                          <%=f.submit 'Register',class:'btn btn-primary pull-righht'%>
                        </div>
                      </div>


                    </form>
                  </div>
                </div>
